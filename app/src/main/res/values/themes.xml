<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCoffeeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/coffee_brown</item>
        <item name="colorPrimaryVariant">@color/espresso</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary / accent -->
        <item name="colorSecondary">@color/caramel</item>
        <item name="colorSecondaryVariant">@color/mocha</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/foam_white</item>
        <item name="colorOnBackground">@color/espresso</item>
        <item name="colorOnSurface">@color/espresso</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/espresso</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/coffee_brown</item>
        <item name="android:navigationBarColor">@color/background_light</item>
    </style>

    <style name="Theme.MyCoffeeApp" parent="Base.Theme.MyCoffeeApp" />

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Splash background -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Splash icon (can be mipmap, drawable, vector) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Optional duration -->
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- The theme that takes over after splash -->
        <item name="postSplashScreenTheme">@style/Theme.MyCoffeeApp</item>
    </style>
</resources>